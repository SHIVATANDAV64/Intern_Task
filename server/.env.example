# Server Environment Variables (.env)
# Copy this file to `.env` and set values

# Core
PORT=5000
NODE_ENV=development
CLIENT_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=change_me_to_a_strong_random_secret
JWT_EXPIRES_IN=7d

# AI - Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_GENERATION_MODEL=gpt-4.1-mini

# Vector DB - Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-gcp
PINECONE_INDEX=form-embeddings
PINECONE_NAMESPACE=users
PINECONE_TOP_K=5

# Media - Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_FOLDER=formgen/uploads
CLOUDINARY_MAX_FILE_SIZE_MB=10

# Security / CORS
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@formgen.ai

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000
